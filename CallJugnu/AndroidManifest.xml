        <activity
            android:name="com.example.calljugnu.EnquiryScreen"
            android:label="@string/title_activity_enquiry_screen" >
        </activity>
        <activity
            android:name="com.example.calljugnu.TasteBuds"
            android:label="@string/title_activity_taste_buds" >
        </activity>
        <activity
            android:name="com.example.calljugnu.SipSap"
            android:label="@string/title_activity_sip_sap" >
