            android:label="@string/title_activity_combo" >
        </activity>
        <activity
            android:name="com.example.calljugnu.Munching"
            android:label="@string/title_activity_munching" >
        </activity>
        <activity
            android:name="com.example.calljugnu.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.calljugnu.Cart"
            android:label="@string/title_activity_cart" >
        </activity>
        <activity
            android:name="com.example.calljugnu.PlaceOrder"
            android:label="@string/title_activity_place_order" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
